<div class="col-6 mb-2">
  <div class="card">
    <div class="card-header">
      <h1>Booking Details</h1>
    </div>
    <div class="card-body">
      <% if @booking.time %>
        <p><strong>Booking Time:</strong> <%= @booking.time %></p>
      <% end %>
      <p><strong>Booking Status:</strong> <%= @booking.status %></p>
      <p><strong>Booking Sempai:</strong> <%= @booking.user.nickname %></p>
    </div>
  </div>
</div>
<div class="col-6">
  <div class="card">
    <div class="card-header">
      <h2>Booking Review</h2>
    </div>
    <div class="card-body">
      <% @booking.messages.each do |message| %>
        <div class="message">
          <p><strong>From:</strong> <%= message.user.nickname %></p>
          <p><%= message.content %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
