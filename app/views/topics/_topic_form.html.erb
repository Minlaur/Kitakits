<%# 1. create a simple form for the topic %>
<%# 2. render it from the home page%>
<%# 3. update the tag in the TopicsController#create%>
<%# 4. update the style%>
<div>
  <%= simple_form_for @topic do |f| %>
    <%= f.input :name, input_html: {class: "bg-white"}, label: false, placeholder: "Eg. About Visa Renewal"%>
    <%= f.input :description, input_html: {class: "bg-white", rows:3}, label: false , placeholder: 'Eg. I made a mistake about my visa renewal. What should I do?'%>
    <%= f.button :submit, class: 'btn btn-primary', value: 'Reach Out'%>
  <% end %>
</div>
