<%= simple_form_for [@user, @review], url: user_reviews_path(@user), data: { insert_in_list_target: "form", action: "submit->insert-in-list#send" } do |f| %>
  <div class="modal-body">
    <%= f.input :rating %>
    <%= f.input :content %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
