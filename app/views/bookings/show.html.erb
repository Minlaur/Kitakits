<div class="container-frame d-flex">
  <div class="col-6 card ">
    <div class="card-chat">
      <div class="chat-container card-body content ">
        <%= render 'bookings/chatroom' %>
      </div>
    </div>
  </div>
  <div class="col-6 card">
    <div class="card-confirmation">
      <div class="card-body content ">
        <h3 class="text-center text-black">Confirmed your booking on</h3>
        <div class="conf-content d-flex flex-column justfify-content-center align-center">
          <p class="fs-3 text-center"><%= @booking.time.strftime("%m-%d %H:%M") %> </p>
          <% if @booking.user.web_url.present? %>
            <%= RQRCode::QRCode.new(@booking.user.web_url).as_svg(module_size: 6).html_safe %>
          <% end %>
          <%= link_to "Goole meet link", "https://meet.google.com/?pli=1", target: "blank" %>
        </div>
      </div>
    </div>
  </div>
</div>
