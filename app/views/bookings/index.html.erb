<div class="container">
  <% time_bookings, no_time_bookings = @bookings.partition { |booking| booking.time.present? } %>
  <% if time_bookings.present? || no_time_bookings.present? %>
    <% [time_bookings, no_time_bookings].each do |group| %>
      <div class="row mt-4">
        <% group.each do |booking| %>
          <div class="col-md-3 d-flex">
            <div class="card flex-fill shadow mb-4 rounded-3" style="border-color: #337CCF;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-3" style="color: #333;">Booking Details</h5>
                <p class="card-text">
                  <strong style="color: #007bff;">Topic:</strong> <%= booking.topic.name %>
                </p>
                <% if booking.time.present? %>
                  <p class="card-text mb-2"><strong style="color: #dc3545;">Booking Time:</strong> <%= booking.time %></p>
                <% end %>
                <p class="card-text mb-2"><strong style="color: #28a745;">Booking Status:</strong> <%= booking.status %></p>
                <p class="card-text mb-4"><strong style="color: #007bff;">Booking Sempai:</strong> <%= booking.topic.user.nickname %></p>
                <%= link_to "More details", sempais_user_booking_path(user_id: @user.id, id: booking.id), class:"btn btn-success" %>
                <div class="mt-auto"></div>
                <!-- This pushes the content to the top -->
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  <% else %>
    <h5 class="text-center mt-5">No Bookings</h5>
  <% end %>
</div>
