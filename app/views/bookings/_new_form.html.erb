
<%= simple_form_for([@topic, @booking]) do |f| %>
  <div class="container justify-content-center">
    <div class="form-inputs fs-5">
      <%= f.input :time, as: :string, input_html: { data: { controller: "datepicker" }, class: "input-group bg-white"} %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, 'Book', class: 'btn btn-primary text-white mb-3 col-2 fs-5' %>
    </div>
  </div>
<% end %>
