<%= simple_form_for([@topic, @booking]) do |f| %>
  <div class="form">
    <div class="form-inputs">
      <%= f.input :time, as: :string, input_html: { data: { controller: "datepicker" } } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'Book', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
