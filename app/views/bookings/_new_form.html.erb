<%# simple form for a new booking %>

  <div>
    <%= simple_form_for(@booking) do |f| %>
    <%= f.error_notification %>
    <div class="form">
      <div class="form-inputs flex-grow-1">
        <div class="form flex-grow-1">
          <%= f.input :start_date,
          as: :string,
          input_html: { data: { controller: "datepicker" } },
            enableTime: true, label: false, placeholder: 'Start time', class: "form_border"%>
          <%= f.input :end_date,
            as: :string,
          input_html: { data: { controller: "datepicker" } }, label: false, placeholder: 'End time', class: "form-border" %>
          <div class="form-actions">
            <%= f.button :submit, class: 'btn-primary', value: 'Book' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
